<UserControl x:Class="OpcClient.Views.TrendView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" Grid.Row="0">
            <Button Content="Refresh"
                    Command="{Binding DataContext.TrendVM.RefreshCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                    Width="60"
                    Height="20"
                    Margin="0,0,5,0"
                    HorizontalAlignment="Left"/>
            <TextBlock Text="Current Level: " Margin="10,0,00,0"/>
            <Border CornerRadius="4" Background="{Binding TankLevelStatus, Converter={StaticResource QualBrush}}">
                <TextBlock Text="{Binding CurrentLevel}" FontWeight="Bold"/>
            </Border>
            <TextBlock Text="Status: " Margin="10,0,10,0"/>
            <TextBlock Text="{Binding CurrentStatus}" FontWeight="Bold"/>
        </StackPanel>
        
        <oxy:PlotView Grid.Row="1" Model="{Binding TrendModel}"/>

        <StatusBar DockPanel.Dock="Bottom" Grid.Row="2">
            <StatusBarItem Content="{Binding Error}" Foreground="Red"/>
        </StatusBar>
    </Grid>
</UserControl>
