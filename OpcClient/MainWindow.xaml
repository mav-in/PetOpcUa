<Window x:Class="OpcClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:OpcClient.Views"
        Title="OPC Client" Height="600" Width="1000">
    <Grid>
        <DockPanel>
            <ProgressBar
                DockPanel.Dock="Bottom"
                Height="4"
                IsIndeterminate="True"
                Visibility="{Binding TagsVM.IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>

            <TabControl>
                <TabItem Header="Tags">
                    <views:TagsView DataContext="{Binding TagsVM}" />
                </TabItem>
                <TabItem Header="Trend">
                    <views:TrendView DataContext="{Binding TrendVM}" />
                </TabItem>
                <TabItem Header="Summary">
                    <views:SummaryView DataContext="{Binding SummaryVM}" />
                </TabItem>
            </TabControl>
        </DockPanel>
    </Grid>
</Window>
